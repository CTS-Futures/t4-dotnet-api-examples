<?xml version="1.0"?>
<configuration>
	
	<configSections>
		<section name="T4TraceListener" type="T4.TraceListener.TraceConfigurationSectionHandler, T4TraceListener"/>
	</configSections>
	
  <system.diagnostics>
    <switches>
      <!--	The level of trace information to be logged.
					0 = none
					1 = errors
					2 = warnings
					3 = informational
					4 = verbose
			-->
      <add name="TraceLevelSwitch" value="3"/>
    </switches>
  </system.diagnostics>


	<!--	T4TraceListener configuration.	-->
	<T4TraceListener
	  Saving="True"
	  Streaming="False"
	  HostAddress=":11099"
	  Timer="5000"
	  Path="var/log/t4/T4LinuxExample"
	  MaxFileSize="50"
	  Timing="False"
	  KeepDays="1"
    />

<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7"/></startup></configuration>
